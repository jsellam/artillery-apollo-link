{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    "lib": ["ES6", "DOM"],
    "outDir": "./dist", // Sortir les fichiers compilés dans /dist
    "declaration": true, // Génère des fichiers de définition `.d.ts`
    "esModuleInterop": true, // Active l'importation interopérable des modules CommonJS et ES6
    "skipLibCheck": true, // Ignore la vérification des fichiers `.d.ts` des dépendances
    "strict": true, // Active les vérifications strictes de type
    "jsx": "react", // Spécifie le type de JSX à utiliser (ici, React)
    "moduleResolution": "node", // Résolution des modules dans le style Node.js
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"], // Inclure le dossier source
  "exclude": ["node_modules", "dist"] // Exclure node_modules et dist de la compilation
}
